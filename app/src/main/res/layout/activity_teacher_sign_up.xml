<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_teache_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.whitebyte.hotspotcontrolexample.TeacherSignUp">

    <EditText
        android:id="@+id/teacher_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"/>

    <EditText
        android:id="@+id/teacher_uid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="UID"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Classes "/>
    <CheckBox
        android:id="@+id/cse1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CSE1"/>
    <CheckBox
        android:id="@+id/cse2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CSE2"/>
    <CheckBox
        android:id="@+id/cse3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CSE3"/>
    <CheckBox
        android:id="@+id/cse4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CSE4"/>
    <CheckBox
        android:id="@+id/cse5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CSE5"/>
    <CheckBox
        android:id="@+id/cse6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CSE6"/>
    <CheckBox
        android:id="@+id/cse7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CSE7"/>
    <CheckBox
        android:id="@+id/cse8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CSE8" />
    <CheckBox
        android:id="@+id/cse9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CSE9" />

    <!--<EditText-->
        <!--android:id="@+id/teacher_class_teach"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:hint="Teacher Class (eg. CSE6,CSE5)"/>-->

    <EditText
        android:id="@+id/teacher_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/submit_teacher_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"/>

</LinearLayout>
