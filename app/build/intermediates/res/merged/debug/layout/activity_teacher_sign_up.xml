<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_teache_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/login"
    tools:context="com.whitebyte.hotspotcontrolexample.TeacherSignUp"
    android:weightSum="1">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/textfieldbg"
            />
        <EditText
            android:layout_margin="10dp"
            android:id="@+id/teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="Name" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/textfieldbg" />
        <EditText
            android:layout_margin="10dp"
            android:id="@+id/teacher_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="UID"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/textfieldbg" />
        <EditText
            android:layout_margin="10dp"
            android:id="@+id/teacher_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/selectclasses"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp">

        <CheckBox
            android:id="@+id/cse1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CSE1"
            android:layout_toLeftOf="@+id/cse2"/>

        <CheckBox
            android:id="@+id/cse2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CSE2"
            android:layout_centerHorizontal="true"/>

        <CheckBox
            android:id="@+id/cse3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CSE3"
            android:layout_toRightOf="@+id/cse2"/>

        <CheckBox
            android:id="@+id/cse4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CSE4"
            android:layout_below="@+id/cse1"
            android:layout_toLeftOf="@+id/cse5"/>

        <CheckBox
            android:id="@+id/cse5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CSE5"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/cse2"
            />

        <CheckBox
            android:id="@+id/cse6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CSE6"
            android:layout_below="@+id/cse3"
            android:layout_toRightOf="@+id/cse5"/>

        <CheckBox
            android:id="@+id/cse7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CSE7"
            android:layout_below="@+id/cse4"
            android:layout_toLeftOf="@+id/cse8"/>

        <CheckBox
            android:id="@+id/cse8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CSE8"
            android:layout_below="@+id/cse5"
            android:layout_centerHorizontal="true"/>

        <CheckBox
            android:id="@+id/cse9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CSE9"
            android:layout_below="@+id/cse6"
            android:layout_toRightOf="@+id/cse8"/>
    </RelativeLayout>

    <Button
        android:id="@+id/submit_teacher_data"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/custsubmitbutton"
       android:layout_marginTop="20dp" />

</LinearLayout>
</ScrollView>